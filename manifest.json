{
    "manifest_version": 3,
    "name": "FACompiler",
    "version": "0.2.0",
    "description": "An extension that works with Canvas Loader to extract FA questions and insert them in excel",

    "permissions": [
        "activeTab",
        "storage",
        "tabs",
        "scripting",
        "identity",
        "background"
    ],

    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": "images/icon.png"
    },
    
    "background": {
        "service_worker": "background.js"
    },
    
    "oauth2": {
        "client_id": "577911638183-f66qil193l8a5bjigkdev1b83vhaeh9a.apps.googleusercontent.com",
        "scopes": [
            "https://www.googleapis.com/auth/spreadsheets",
            "https://www.googleapis.com/auth/spreadsheets.readonly"
        ]
    },

    "content_scripts": [
        {
            "matches": ["https://feu.instructure.com/courses/*/take*"],
            "js": ["scripts/globals.js", "scripts/type.js", "scripts/utils.js", "scripts/extract.js", "scripts/sheet.js", "scripts/drivers/init.js", "scripts/main.js", "scripts/toast.js"]
        }
    ]
}