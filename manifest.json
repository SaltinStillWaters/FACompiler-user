{
    "manifest_version": 3,
    "name": "FACompiler",
    "version": "0.2.0",
    "description": "An extension that works with Canvas Loader to extract FA questions and insert them in excel",

    "permissions": [
        "activeTab",
        "storage",
        "tabs",
        "scripting",
        "background"
    ],

    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": "images/icon.png"
    },
    
    "background": {
        "service_worker": "background.js"
    },
    
    "host_permissions": [
        "https://sheets.googleapis.com/*"
    ],

    "content_scripts": [
        {
            "matches": ["https://feu.instructure.com/courses/*/take*"],
            "js": ["scripts/globals.js", "scripts/type.js", "scripts/utils.js", "scripts/extract.js", "scripts/sheet.js", "scripts/drivers/init.js", "scripts/main.js", "scripts/toast.js"]
        }
    ]
}