{
    "manifest_version": 3,
    "name": "FACompiler",
    "version": "1.1.0",
    "description": "Uses service account. Suitable for multiple users. Sheet Names are now changeable",

    "permissions": [
        "activeTab",
        "storage",
        "tabs",
        "scripting",
        "background"
    ],

    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": "images/icon.png"
    },
    
    "background": {
        "service_worker": "background.js"
    },
    
    "host_permissions": [
        "https://sheets.googleapis.com/*",
        "https://www.googleapis.com/auth/drive",
        "https://www.googleapis.com/auth/drive.file"
    ],

    "content_scripts": [
        {
            "matches": ["https://feu.instructure.com/courses/*"],
            "js": ["js/globals.js", "js/init.js", "js/sheetAPI.js", "js/utils.js", "js/sheet.js"]
        }
    ]
}